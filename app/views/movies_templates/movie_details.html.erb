<h1>
  Movie #<%=@movie_row.id%> details
</h1>

<a href="/movies">
  Go back
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%=@movie_row.title%>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%=@movie_row.year%>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%=@movie_row.duration%>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%=@movie_row.description%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%="#{@movie_row.image}"%> style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <%=Director.where({:id=>@movie_row.director_id})[0].name%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@movie_row.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@movie_row.updated_at%>
  </dd>
</dl>

<hr>
