<h1>
  Actor #<%=@actor_row.id%> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor_row.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@actor_row.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@actor_row.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%="#{@actor_row.image}"%> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@actor_row.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@actor_row.updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @character_rows.each do |char_row|%>
    <tr>
      <td>
        <%=Movie.where({:id => char_row.movie_id})[0].title%>
      </td>

      <td>
        <%=Movie.where({:id => char_row.movie_id})[0].year%>
      </td>

      <td>
        <%=Director.where({:id => Movie.where({:id => char_row.movie_id})\
    [0].director_id})[0].name%>
      </td>

      <td>
        <%=char_row.name%>
      </td>

      <td>
        <a href=<%="/movies/#{char_row.movie_id}"%>>
        Show details
      </a>
    </td>
  </tr>
  <%end%>
</table>
