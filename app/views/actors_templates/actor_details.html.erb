<h1>
  Actor #<%=@actor_row.id%> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor_row.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@actor_row.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%=@actor_row.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%="#{@actor_row.image}"%> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@actor_row.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@actor_row.updated_at%>
  </dd>
</dl>

<hr>

