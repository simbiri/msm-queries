<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @actor_movies.each do |movie_row|%>
  <tr>
    <td>
     <%=movie_row.title%>
    </td>

    <td>
      <%=movie_row.year.to_s%>
    </td>

    <td>
    <%=Director.where({:id => movie_row.director_id})%>
    </td>

    <td>
      Brooks Hatlen
    </td>

    <td>
      <a href="/movies/1">
        Show details
      </a>
    </td>
  </tr>
